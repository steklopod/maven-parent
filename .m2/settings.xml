<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <servers>
        <server>
            <id>snapshots</id>
            <username>${env.MAVEN_REPO_USER}</username>
            <password>${env.MAVEN_REPO_PASS}</password>
        </server>
        <server>
            <id>embp-releases</id>
            <username>${env.MAVEN_REPO_USER}</username>
            <password>${env.MAVEN_REPO_PASS}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>embp</id>
            <properties>
                <altSnapshotDeploymentRepository>
                    snapshots::default::http://nexus.steklopod.by/repository/snapshots/
                </altSnapshotDeploymentRepository>
                <altReleaseDeploymentRepository>
                    embp-releases::default::http://nexus.steklopod.by/repository/embp-releases/
                </altReleaseDeploymentRepository>
            </properties>
            <repositories>
                <repository>
                    <id>maven-central</id>
                    <name>maven-central</name>
                    <url>http://nexus.steklopod.by/repository/maven-central/</url>
                </repository>
                <repository>
                    <id>embp-releases</id>
                    <name>embp-releases</name>
                    <url>http://nexus.steklopod.by/repository/embp-releases/</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </releases>
                </repository>
                <repository>
                    <id>snapshots</id>
                    <name>snapshots</name>
                    <url>http://nexus.steklopod.by/repository/snapshots/</url>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>maven-central</id>
                    <name>maven-central</name>
                    <url>http://nexus.steklopod.by/repository/maven-central/</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>embp</activeProfile>
    </activeProfiles>
</settings>
